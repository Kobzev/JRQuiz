<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/security 
	http://www.springframework.org/schema/security/spring-security-3.2.xsd
		
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


	<http auto-config="true">

		<access-denied-handler error-page="/accessDenied" />

		<intercept-url pattern="/home" access="ROLE_USER" />
		
		<form-login login-page='/login' default-target-url="/home"
			authentication-failure-url="/login?error=true" username-parameter="user_login"
			password-parameter="password_login" />

		<logout logout-success-url="/login" />

<!-- 		<remember-me data-source-ref="dataSourceLogin" /> -->
		<remember-me />

	</http>




	<authentication-manager>
		<authentication-provider>
			<!-- <user-service> -->
			<!-- <user name="user" password="user" authorities="ROLE_USER, ROLE_ADMIN" 
				/> -->
			<!-- <user name="admin" password="admin" authorities="ROLE_ADMIN" /> -->
			<!-- </user-service> -->

			<jdbc-user-service data-source-ref="dataSourceLogin" />


		</authentication-provider>
	</authentication-manager>




</beans:beans>
